generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  clerkId   String    @unique
  email     String
  createdAt DateTime  @default(now())
  projects  Project[]
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  prompt      String
  contentJSON Json
  deployedUrl String?
  userId      Int
  createdAt   DateTime @default(now())
  user        User     @relation(fields: [userId], references: [id])
}
