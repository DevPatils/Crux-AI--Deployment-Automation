generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  clerkId   String    @unique
  email     String
  projects  Project[]
  createdAt DateTime  @default(now())
}

model Project {
  id          Int       @id @default(autoincrement())
  title       String
  prompt      String
  contentJSON Json
  deployedUrl String?
  userId      Int
  user        User      @relation(fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
}
